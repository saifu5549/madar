rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function isAdmin() {
      return isSignedIn() && getUserData().role == 'admin';
    }
    
    function isTeacher() {
      return isSignedIn() && getUserData().role == 'teacher';
    }
    
    function belongsToSameMadarsa(madarsaId) {
      return isSignedIn() && getUserData().madarsaCode == madarsaId;
    }
    
    // USERS Collection
    match /users/{userId} {
      // Allow users to read their own profile
      allow read: if isSignedIn() && isOwner(userId);
      
      // Allow users to create their own profile during registration
      allow create: if isSignedIn() && isOwner(userId);
      
      // Allow users to update their own profile
      allow update: if isSignedIn() && isOwner(userId);
      
      // Allow admins to read users in their madarsa (for approval system)
      allow read: if isSignedIn() && isAdmin();
      
      // Allow admins to update user status (approve/reject)
      allow update: if isSignedIn() && isAdmin();
    }
    
    // MADARSAS Collection
    match /madarsas/{madarsaId} {
      // Anyone can read madarsa listings (for public directory)
      allow read: if true;
      
      // Allow any authenticated user to create a madarsa
      // They must set themselves as the creator
      allow create: if isSignedIn() && request.resource.data.meta.createdBy == request.auth.uid;
      
      // Only the creator can update/delete
      allow update, delete: if isSignedIn() && resource.data.meta.createdBy == request.auth.uid;
    }
    
    // TEACHERS Collection
    match /teachers/{teacherId} {
      // Teachers can read their own profile
      allow read: if isSignedIn() && (isOwner(teacherId) || isAdmin());
      
      // Allow creation when joining a madarsa
      allow create: if isSignedIn();
      
      // Teachers can update their own profile, admins can update their teachers
      allow update: if isSignedIn() && (isOwner(teacherId) || isAdmin());
      
      // Only admins can delete teachers
      allow delete: if isSignedIn() && isAdmin();
    }
    
    // STUDENTS Collection
    match /students/{studentId} {
      // Students and their parents can read profiles
      allow read: if isSignedIn();
      
      // Allow creation when enrolling
      allow create: if isSignedIn();
      
      // Students, parents, and admins can update
      allow update: if isSignedIn();
      
      // Only admins can delete
      allow delete: if isSignedIn() && isAdmin();
    }
    
    // CLASSES Collection
    match /classes/{classId} {
      // Anyone in the madarsa can read classes
      allow read: if isSignedIn();
      
      // Only admins can create/update/delete classes
      allow create, update, delete: if isSignedIn() && isAdmin();
    }
    
    // ATTENDANCE Collection
    match /attendance/{madarsaId}/{allPaths=**} {
      // Teachers and admins can read/write attendance
      allow read, write: if isSignedIn() && (isTeacher() || isAdmin());
    }
    
    // MARKS/EXAMS Collection
    match /marks/{madarsaId}/{allPaths=**} {
      // Teachers and admins can read/write marks
      allow read, write: if isSignedIn() && (isTeacher() || isAdmin());
      
      // Students can read their own marks
      allow read: if isSignedIn();
    }
    
    // ANNOUNCEMENTS Collection
    match /announcements/{announcementId} {
      // Everyone can read announcements
      allow read: if isSignedIn();
      
      // Only admins can create/update/delete announcements
      allow create, update, delete: if isSignedIn() && isAdmin();
    }
    
    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
